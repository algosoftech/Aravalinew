<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.StudentIdentityActivity">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/identitybg"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/header"
            android:orientation="vertical">

            <TextView
                android:id="@+id/school_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aravali International School"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:id="@+id/school_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Badkal Surajkund Road, Sector-43,Faridabad,Haryana 121003, India."
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/white"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:id="@+id/school_phone_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="3dp"
                android:text="Ph.: 129 2988147, 129 2988148"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/cardItem"
                    android:background="@drawable/cardviewbg"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/identityColor"
                    card_view:cardCornerRadius="3dp"
                    card_view:cardElevation="2dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Admin. No."
                            android:layout_marginTop="3dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/light_black"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvadmin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="298547"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="3dp"
                            android:textColor="@color/light_black"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivIdcard"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/withoutshadow"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/cardviewbg"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/identityColor"
                    card_view:cardCornerRadius="3dp"
                    card_view:cardElevation="2dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ID No."
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/light_black"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvIdNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="298547"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/light_black"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NANDINI RAWAT"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="@dimen/weight1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Father's Name"
                    android:textColor="@android:color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/tvFName"
                    android:layout_weight="@dimen/weight2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NAVEEN RAWAT"
                    android:textColor="@android:color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:padding="5dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="@dimen/weight1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mother's Name"
                    android:textColor="@android:color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/tvMotherName"
                    android:layout_weight="@dimen/weight2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NEELU RAWAT"
                    android:textColor="@android:color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:padding="5dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="@dimen/weight1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Class(Sec)"
                    android:textColor="@android:color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/tvSection"
                    android:layout_weight="@dimen/weight2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="|||(D)"
                    android:textColor="@android:color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:padding="5dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="@dimen/weight1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact No."
                    android:textColor="@android:color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/tvContact"
                    android:layout_weight="@dimen/weight2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20160053, 20160053"
                    android:textColor="@android:color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:padding="5dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="@dimen/weight1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Roll No."
                    android:textColor="@android:color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/tvRoll"
                    android:layout_weight="@dimen/weight2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20160053"
                    android:textColor="@android:color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:padding="5dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="@dimen/weight1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="@android:color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_weight="@dimen/weight2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:padding="5dp"/>


            </LinearLayout>

        </LinearLayout>

        
    </LinearLayout>
   </ScrollView>
</LinearLayout>