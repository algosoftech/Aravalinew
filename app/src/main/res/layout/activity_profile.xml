<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activities.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:layout_gravity="center"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civStudent"
            android:layout_width="100dp"
            android:src="@drawable/withoutshadow"
            android:padding="10dp"
            app:civ_border_color="#ffffff"
            app:civ_border_width="2dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/tvImgName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:text="BAVDEEP SINGH GUJRAL "
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Admission No"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/light_black"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tvTeacher1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" "
                android:gravity="center"
                android:textColor="@color/light_black"
                android:textSize="12dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center" />

        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Class"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:textColor="@color/light_black"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:gravity="center"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tvClass1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="||"
                android:layout_marginLeft="5dp"
                android:textColor="@color/light_black"
                android:textSize="12dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Section"
                android:textStyle="bold"
                android:textColor="@color/light_black"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:gravity="center"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tvSection1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="H"
                android:layout_marginLeft="1dp"
                android:textColor="@color/light_black"
                android:textSize="12dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:layout_gravity="center" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"></LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circlebg">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/userpro"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:scaleType="fitXY" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tvStudentName1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BAVDEEP SINGH GUJRAL"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/light_black"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:layout_marginTop="10dp"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circlebg">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/call"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:scaleType="fitXY" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvMobNo1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5241639872"
                    android:maxLength="10"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/light_black"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:layout_marginTop="10dp"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circlebg">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/email"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:scaleType="fitXY" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvEmail1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="abc@gmail.com"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/light_black"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:layout_marginTop="10dp"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circlebg">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/slocation"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:scaleType="fitXY" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvLocation1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/light_black"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:layout_marginTop="10dp"></LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circlebg">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/zipcode"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:scaleType="fitXY" />

                </LinearLayout>
                <TextView
                    android:id="@+id/tvZipCode1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/light_black"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:layout_marginTop="10dp"></LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circlebg">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/world"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:scaleType="fitXY" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvWorld1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/light_black"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:layout_marginTop="10dp"></LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>